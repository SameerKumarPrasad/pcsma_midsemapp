<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.projectmitsuki.retrofitexample.HomeActivity">

    <TextView android:text="@string/welcome" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch all Users"
        android:id="@+id/fetch_all"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch User with ID"
        android:id="@+id/fetch_id"
        android:layout_below="@+id/fetch_all"
        android:layout_alignLeft="@+id/fetch_all"
        android:layout_alignStart="@+id/fetch_all"
        android:layout_alignRight="@+id/fetch_all"
        android:layout_alignEnd="@+id/fetch_all" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create User"
        android:id="@+id/create_user"
        android:layout_below="@+id/fetch_id"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update user"
        android:id="@+id/update_user"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/create_user"
        android:layout_alignStart="@+id/create_user" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete User with ID"
        android:id="@+id/Delete_user"
        android:layout_below="@+id/update_user"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete All Users"
        android:id="@+id/Delete_all_user"
        android:layout_below="@+id/Delete_user"
        android:layout_alignLeft="@+id/fetch_id"
        android:layout_alignStart="@+id/fetch_id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Delete"
        android:id="@+id/verify_delete"
        android:layout_below="@+id/Delete_all_user"
        android:layout_alignLeft="@+id/update_user"
        android:layout_alignStart="@+id/update_user" />

</RelativeLayout>
